{
  "name": "@fengmk2/iconv",
  "version": "0.0.5",
  "description": "Fast and robust character encoding conversion for Node.js using native Rust bindings",
  "type": "module",
  "main": "./dist/wrapper.js",
  "types": "./dist/wrapper.d.ts",
  "exports": {
    ".": {
      "types": "./dist/wrapper.d.ts",
      "import": "./dist/wrapper.js"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/fengmk2/iconv.git"
  },
  "license": "MIT",
  "browser": "browser.js",
  "keywords": [
    "iconv",
    "encoding",
    "charset",
    "character-encoding",
    "gbk",
    "gb2312",
    "big5",
    "shift-jis",
    "euc-kr",
    "utf8",
    "utf-8",
    "conversion",
    "transcoding",
    "napi-rs",
    "rust",
    "native-binding"
  ],
  "files": [
    "dist"
  ],
  "napi": {
    "binaryName": "iconv",
    "targets": [
      "x86_64-pc-windows-msvc",
      "x86_64-apple-darwin",
      "x86_64-unknown-linux-gnu",
      "x86_64-unknown-linux-musl",
      "aarch64-unknown-linux-gnu",
      "i686-pc-windows-msvc",
      "armv7-unknown-linux-gnueabihf",
      "aarch64-apple-darwin",
      "aarch64-linux-android",
      "x86_64-unknown-freebsd",
      "aarch64-unknown-linux-musl",
      "aarch64-pc-windows-msvc",
      "armv7-linux-androideabi"
    ]
  },
  "engines": {
    "node": ">= 20.19.0"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/",
    "access": "public"
  },
  "scripts": {
    "artifacts": "napi artifacts",
    "bench": "vitest bench",
    "build": "napi build --platform --release --esm -o src/binding",
    "build:debug": "napi build --platform --esm -o src/binding",
    "build:wrapper": "tsdown",
    "format": "run-p format:prettier format:rs format:toml",
    "format:prettier": "prettier . -w",
    "format:toml": "taplo format",
    "format:rs": "cargo fmt",
    "lint": "oxlint .",
    "prepublishOnly": "npm run build:wrapper && napi prepublish -t npm",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:performance": "npm run test:copy-binding && node --allow-natives-syntax performance/index.cjs",
    "test:cjs": "npm run test:copy-binding && node performance/hello.cjs",
    "test:copy-binding": "npm run build:wrapper && cp src/binding/iconv.*.node dist/binding",
    "version": "napi version",
    "prepare": "husky"
  },
  "devDependencies": {
    "@emnapi/core": "^1.4.5",
    "@emnapi/runtime": "^1.4.5",
    "@napi-rs/cli": "^3.0.3",
    "@taplo/cli": "^0.7.0",
    "@tybys/wasm-util": "^0.10.0",
    "@types/iconv": "^3",
    "@types/node": "^24.3.0",
    "@vitest/ui": "^3.2.4",
    "bench-node": "^0.10.0",
    "chalk": "^5.4.1",
    "husky": "^9.1.7",
    "iconv-lite": "^0.7.0",
    "lint-staged": "^16.1.2",
    "npm-run-all2": "^8.0.4",
    "oxlint": "^1.8.0",
    "prettier": "^3.6.2",
    "tsdown": "^0.14.2",
    "typescript": "^5.8.3",
    "vitest": "^3.2.4"
  },
  "optionalDependencies": {
    "iconv": "^3.0.1"
  },
  "lint-staged": {
    "*.@(js|ts|tsx)": [
      "oxlint --fix"
    ],
    "*.@(js|ts|tsx|yml|yaml|md|json)": [
      "prettier --write"
    ],
    "*.toml": [
      "taplo format"
    ],
    "*.rs": [
      "cargo fmt --"
    ]
  },
  "prettier": {
    "printWidth": 120,
    "semi": false,
    "trailingComma": "all",
    "singleQuote": true,
    "arrowParens": "always"
  },
  "packageManager": "yarn@4.9.3"
}
